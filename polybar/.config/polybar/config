[module/i3]
strip-wsnumbers = true
type = internal/i3
format = <label-state> <label-mode>

label-focused = %index%
label-focused-foreground = #e6e6e6
label-focused-background = #999999
label-focused-underline = #fba922
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-padding = 1

label-visible = %index%
label-visible-underline = #555555
label-visible-padding = 1

label-urgent = %index%
label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-padding = 1

[module/date]
type = internal/date
interval = 1.0
date = %A, %d %B %I:%M %p

[module/title]
type = internal/xwindow
format-foreground = #e6e6e6
format-padding = 2
label-maxlen = 50

[module/cpu]
type = internal/cpu
interval = 1
label = CPU %percentage:2%%

[module/memory]
type = internal/memory
interval = 1
label = RAM %gb_used:5% / %gb_free:5%

[module/ohno]
type = custom/text
content-padding = 1
content = oh no

[module/mpdprogress]
type = internal/mpd
host = /home/asdf/.config/mpd/socket
interval = 1
label-song = %title%
format-online = <bar-progress> <label-time> <icon-random> <icon-repeat> <icon-single>
bar-progress-width = 45
bar-progress-indicator = |
bar-progress-fill = ─
bar-progress-empty = ─
icon-random = x
icon-repeat = r
icon-single = s
toggle-on-foreground = #e6e6e6
toggle-off-foreground = #55

[module/mpdtitle]
type = internal/mpd
